
{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true, 
        "jest": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "react-app",
        "airbnb",
        "plugin:jest/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "es6": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "rules": {
        "comma-dangle": [
            1,
            "always-multiline"
        ],
        "no-underscore-dangle": 0,
        "max-len": [
            1,
            180,
            4
        ],
        "arrow-body-style": [
            0
        ],
        "react/jsx-no-bind": [
            0
        ],
        "import/no-unresolved": [
            0
        ], // Until import plugin supports webpack 2 resolveModules
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ]
    }
}
